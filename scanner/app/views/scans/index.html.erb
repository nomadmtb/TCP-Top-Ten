<div class="page_wrap">
	<h1 class="about_title">All Scans <span class="subtitle">Viewing All Scan Data</span></h1>
	<div class="push_right">
		<p>You are now viewing all of the scan records. To view a record in more detail, click the area
		around a scan record to expand the view</p>
			<div class="accordion">
		<% @scans.reverse!.each do |scan| %>
			<h3><%=scan.ip_address%><span class="subtitle"><%=' ' + scan.domain_name_ptr %></span></h3>
				<div>
				<table class="scan_results">
					<tr>
						<th>Host</th>
						<td><%= scan.ip_address %></td>
					</tr>
					<tr>
						<th>Domain PTR</th>
						<td><%= scan.domain_name_ptr %></td>
					</tr>
					<tr>
						<th>Host Status</th>
						<td><%= scan.status %></td>
					</tr>
					<tr>
						<th>Scan Duration</th>
						<td><%= scan.elapsed %></td>
					</tr>
					<tr>
						<th>Scan Date</th>
						<td><%= scan.scan_date.month.to_s + '-' + scan.scan_date.day.to_s + '-' + scan.scan_date.year.to_s %></td>
					</tr>
					<tr>
						<th>Scan Time</th>
						<td><%= scan.scan_date.strftime("%r") %></td>
					</tr>
				</table>

				<h3>Open TCP Ports</h3>
				<% if scan.open_ports.empty? == false %>
				<table class="scan_results">
					<tr>
						<th>Port</th>
						<th>Service</th>
					</tr>
					<% scan.open_ports.each do |open_port| %>
						<tr>
							<td><%= open_port.port %></td>
							<td><%= open_port.service %></td>
						</tr>
					<% end %>
				</table>
			<% else %>
				<h4>*No open ports were detected*</h4>
			<% end %>
				<%=link_to 'View', scan %>
			</div>
		<% end %>
			</div>
	</div>
</div>
