<div class="page_wrap">
	<h1 class="about_title">Scan Statistics</h1>
	<div class="push_right">
		<table class="stat_sum">
			<tr>
				<td>Number of Hosts Scanned</td>
				<td><%= @host_count %></td>
			</tr>
			<tr>
				<td>Number of Open Ports Detected</td>
				<td><%= @port_count %></td>
			</tr>
			<tr>
				<td>Average of Open Ports Per Scan</td>
				<td><%= @ports_per_host %></td>
			</tr>
		</table>

		<table class="stat_sum">
			<tr>
				<th>Service/Port</th>
				<th>Number of Hosts</th>
				<th>Percent of scanned hosts</th>
			</tr>

			<tr>
				<td>21/FTP</td>
				<td><%= @ftp_num %></td>
				<td><%= @ftp_percent %></td>
			</tr>

			<tr>
				<td>22/SSH</td>
				<td><%= @ssh_num %></td>
				<td><%= @ssh_percent %></td>
			</tr>

			<tr>
				<td>23/TELNET</td>
				<td><%= @telnet_num %></td>
				<td><%= @telnet_percent %></td>
			</tr>

			<tr>
				<td>25/SMTP</td>
				<td><%= @smtp_num %></td>
				<td><%= @smtp_percent %></td>
			</tr>

			<tr>
				<td>80/HTTP</td>
				<td><%= @http_num %></td>
				<td><%= @http_percent %></td>
			</tr>

			<tr>
				<td>110/POP3</td>
				<td><%= @pop3_num %></td>
				<td><%= @pop3_percent %></td>
			</tr>

			<tr>
				<td>139/NetBIOS</td>
				<td><%= @netbios_num %></td>
				<td><%= @netbios_percent %></td>
			</tr>

			<tr>
				<td>443/HTTPS</td>
				<td><%= @https_num %></td>
				<td><%= @https_percent %></td>
			</tr>

			<tr>
				<td>445/SMB</td>
				<td><%= @smb_num %></td>
				<td><%= @smb_percent %></td>
			</tr>

			<tr>
				<td>3389/RDP</td>
				<td><%= @rdp_num %></td>
				<td><%= @rdp_percent %></td>
			</tr>
		</table>
	</div>
</div>
